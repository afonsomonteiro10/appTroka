<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@drawable/card_background"
    android:elevation="8dp"
    android:padding="8dp">

    <!-- Imagem de perfil (cabe toda a parte superior) -->
    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="match_parent"
        android:layout_height="70%"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_profile" />

    <!-- Fundo semi-transparente no rodapé para texto sobre a imagem -->
    <View
        android:layout_width="match_parent"
        android:layout_height="30%"
        android:layout_gravity="bottom"
        android:background="#80000000" />

    <!-- Nome / descrição por cima do fundo escuro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30%"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Utilizador"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_skill_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ofereço: Italiano"
            android:textColor="#DDDDDD"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_skill_want"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quero aprender: Andar de Bicicleta"
            android:textColor="#DDDDDD"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>
